(define filename (path-join (list *lisp-test-path* "etc" "mymod.fl")))
(%%import-string filename)
(eq? (type mymod) <module>)
=> true

(define filename (path-join (list *lisp-test-path* "etc" "mymod.fl")))
(%%import-string filename)
(module-names mymod)
=> (bar foo)

(define filename (path-join (list *lisp-test-path* "etc" "mymod.fl")))
(%%import-string filename)
((module-get mymod 'foo) 33)
=> 34

(define filename (path-join (list *lisp-test-path* "etc" "mymod.fl")))
(%%import-string filename)
(define f ((module-get mymod 'bar) 10))
